@model APIConsumerMVC.ViewModels.EmployeeFormViewModel

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div>
        <label>Department</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
            <option disabled selected>-- Select --</option>
        </select>
    </div>

    <input type="submit" value="Save" class="btn btn-success" />
</form>
<a style="text-decoration: none; color:white; background-color:blueviolet; padding: 10px; border-radius: 5px; margin-top:10px; display: inline-flex;"
   href="/Department/Index">
    Back To List
</a>