@model Department

@{
    ViewData["Title"] = "Edit Department";
}

<h2>Edit Department</h2>

<form method="post" action="/Department/SaveEdit">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>Name</label>
        <input name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <input name="Description" class="form-control" value="@Model.Description" />
    </div>

    <br />
    <input type="submit" value="Update" class="btn btn-success" />
</form>
<a style="text-decoration: none; color:white; background-color:blueviolet; padding: 10px; border-radius: 5px; margin-top:10px; display: inline-flex;"
   href="/Department/Index">Back To List
</a>